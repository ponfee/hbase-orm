<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="1800" strict="true">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} | %highlight{%-5p} | %c{1} >>>> %msg%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="cn.ponfee.hbase" level="INFO" />
        <Root level="WARN">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>

</Configuration>
